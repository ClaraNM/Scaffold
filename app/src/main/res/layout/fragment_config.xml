<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_bg"
    >

    <TextView
        android:layout_gravity="center_horizontal|top"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Elije nave"
        android:fontFamily="@font/kenvector_future_thin"
        android:paddingHorizontal="20dp"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btn_ship_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_red_icon"
        />
    <ImageButton
        android:id="@+id/btn_ship_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:paddingVertical="20dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_green_icon"
        />
    <ImageButton
        android:id="@+id/btn_ship_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="20dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_blue_icon"
        />
    <ImageButton
        android:id="@+id/btn_ship_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:paddingVertical="20dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_orange_icon"
        />
</FrameLayout>