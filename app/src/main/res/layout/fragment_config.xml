<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_bg"
    >


    <ImageButton
        android:id="@+id/btn_ship_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_red"
        />
    <ImageButton
        android:id="@+id/btn_ship_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:paddingVertical="20dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_green"
        />
    <ImageButton
        android:id="@+id/btn_ship_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="20dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_blue"
        />
    <ImageButton
        android:id="@+id/btn_ship_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:paddingVertical="20dp"
        android:background="@drawable/button_blue"
        android:src="@drawable/player_ship_orange"
        />
</FrameLayout>